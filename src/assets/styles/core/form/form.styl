.form
  &__input, &__textarea
    position relative
    width 100%
    margin 0
    padding 0 8px
    box-shadow none
    outline none
    color #777
    font-size 1rem
    border none
    border-radius 2px
    background none
    cursor text
    transition .2s
    &::placeholder
      opacity 1
      color #bebebe
  &__input
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
  &__textarea
    padding-top 3px
    padding-bottom 3px
  &__group
    position relative
    display flex
    height 2rem
    background #e9e9e9
    border-radius 2px
    cursor pointer,
    &:before
      content ''
      position absolute
      top 1px
      right 1px
      bottom 1px
      left 1px
      border-radius 2px
      background #fff
    &_textarea
      height auto
      white-space normal
      text-overflow white-space
      overflow auto
      &:before
        height auto
    &_lg
      height 2.5rem
    &_block
      width 100%
    &_dropdown
      padding-right 25px
      &:after
        content ''
        position absolute
        top 50%
        right 6px
        transform translate(-50%, -75%) rotate(45deg)
        display block
        width 12px
        height @width
        border-right 1px solid #999
        border-bottom 1px solid #999
        transition .2s
      &_inline
        width 100%
        display inline-block
        background none
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
        &:before
          display none
        &:after
          width 8px
          height @width
          border-color inherit
      .form__input
        cursor pointer
  &__addon
    position relative
    display flex
    align-items center
    justify-content center
    min-width 32px
    box-shadow 6px 0 0px -5px #999
    color #999
    cursor pointer
    .icon
      width 18px
      height 18px
  &__message
    margin-top -15px
    margin-bottom 15px
    font-size .95rem
    &_error
      color #ea4b35
