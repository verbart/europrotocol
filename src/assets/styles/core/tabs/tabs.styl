.tabs
  &__header
    display table
    //table-layout fixed
    text-align center
    width 100%
    //border-bottom 1px solid #bebebe
    @media (max-width 768px)
      display block
  &__tab
    display table-cell
    padding .4rem
    background #fff
    color #606065
    cursor pointer
    font-size 1.15rem
    transition .2s
    &:hover
      background #eee
    & + &
      border-left 1px solid #bebebe
    @media (max-width 768px)
      display block
      & + &
        border-left none
        border-top 1px solid #bebebe
    &_active
      background #eee
      color #363636
      &:hover
        opacity 1
        cursor default
