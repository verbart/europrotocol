@import 'steps'


.europrotocol
  //height 100%
  min-height 100%
  background #eef0f2
  &__loader
    position fixed
    top 50%
    left 50%
    width 100%
    transform translate(-50%, -50%)
    padding 15px
    text-align center
    color #888
    font-size 1rem
  &__footer
    position fixed
    bottom 0
    left 0
    right 0
    z-index 800
    box-shadow 0 0 1px 1px #999
    background rgba(#fff, .8)

.europrotocolField
  display flex
  justify-content space-between
  align-items center
  margin 0
  padding-top 10px
  padding-bottom 10px
  border-bottom 2px solid #e4e6e9
  &:last-child
    border-bottom none
  &__main
    display flex
    justify-content space-between
    align-items center
    width 100%
    &_inline
      display inline-flex
      width auto
    &_left
      justify-content flex-start
    &_right
      justify-content flex-end
    &_left, &_right
      .europrotocolField__label
        padding-right 5px
  &__secondary
    width 100%
    padding-top 10px
  &__label
    line-height 1
    color #918e9c
  &__control
    display flex
    flex-direction column
    align-items flex-end
  &_column
    flex-direction column
