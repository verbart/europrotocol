@import 'steps'


.europrotocol
  height 100%
  min-height 100%
  background #eef0f2
  &__loader
    position fixed
    top 50%
    left 50%
    width 100%
    transform translate(-50%, -50%)
    padding 15px
    text-align center
    color #888
    font-size 1rem
  &__footer
    position fixed
    bottom 0
    left 0
    right 0
    z-index 800
    box-shadow 0 0 1px 1px #999
    background rgba(#fff, .8)

.europrotocolField
  display flex
  justify-content space-between
  align-items center
  padding-top 10px
  padding-bottom 10px
  border-bottom 2px solid #e4e6e9
  &__label
    line-height 1
    color #918e9c
    &_block
      width 100%
      padding-bottom 10px
  &__control
    display flex
    flex-direction column
  &_column
    flex-direction column
    .europrotocolField
      &__control
        width 100%
