include /src/components/checkbox/checkbox
include /src/components/radio-button/radio-button


.container
  protocol-header(
    go-back='protocol.main-info',
    step-title='ТС "A" (2/7)'
  )

  form
    .protocolField.protocolField_column
      .protocolField__main
        .protocolField__label Данные о ТС "A":
      .protocolField__secondary
        .form__group.form__group_block.margin_bottom_small
          input.form__input(
            ng-model='ProtocolCtrl.europrotocol.A.vehicle.carBrand'
            name='carBrand'
            placeholder='Марка машины'
          )
        .form__group.form__group_block.margin_bottom_small
          input.form__input(
            ng-model='ProtocolCtrl.europrotocol.A.vehicle.VIN'
            name='VIN'
            placeholder='VIN ТС'
          )
        .form__group.form__group_block.margin_bottom_small

          input.form__input(
            ng-model='ProtocolCtrl.europrotocol.A.vehicle.carNumber'
            name='carNumber'
            placeholder='Номер машины'
          )
        .form__group.form__group_block
          input.form__input(
            ng-model='ProtocolCtrl.europrotocol.A.vehicle.STSorPTS'
            name='STSorPTS'
            placeholder='СТС или ПТС'
          )

    .protocolField.protocolField_column
      .protocolField__main
        .protocolField__label Собственник ТС "A":
      .protocolField__secondary
        .form__group.form__group_block.margin_bottom_small
          input.form__input(
            ng-model='ProtocolCtrl.europrotocol.A.owner.fullName'
            name='fullName'
            placeholder='ФИО'
          )
        .form__group.form__group_block
          input.form__input(
            ng-model='ProtocolCtrl.europrotocol.A.owner.address'
            name='address'
            placeholder='Адрес'
          )

    .protocolField.protocolField_column
      .protocolField__main
        .protocolField__label Водитель ТС "A":
      .protocolField__secondary
        .form__group.form__group_block.margin_bottom_small
          input.form__input(
            ng-model='ProtocolCtrl.europrotocol.A.driver.fullName'
            name='fullName'
            placeholder='ФИО'
          )
        .form__group.form__group_block.margin_bottom_small
          input.form__input(
            ng-model='ProtocolCtrl.europrotocol.A.driver.birthday'
            name='birthday'
            placeholder='Дата рождения'
          )
        .form__group.form__group_block.margin_bottom_small
          input.form__input(
            ng-model='ProtocolCtrl.europrotocol.A.driver.address'
            name='address'
            placeholder='Адрес'
          )
        .form__group.form__group_block.margin_bottom_small
          input.form__input(
            ng-model='ProtocolCtrl.europrotocol.A.driver.phone'
            name='phone'
            placeholder='Номер телефона'
          )
        .form__group.form__group_block.margin_bottom_small
          input.form__input(
            ng-model='ProtocolCtrl.europrotocol.A.driver.email'
            name='email'
            placeholder='E-mail'
          )
        .form__group.form__group_block.margin_bottom_small
          input.form__input(
            ng-model='ProtocolCtrl.europrotocol.A.driver.driversLicense'
            name='driversLicense'
            placeholder='Водительское удостоверение'
          )

    .protocolField.protocolField_column
      .protocolField__main
        .protocolField__label Категория:
      .protocolField__secondary(ng-init='ProtocolCtrl.europrotocol.A.category = "A"')
        label.protocolField.protocolField_column
          .protocolField__main
            .protocolField__label A
            .protocolField__control
              +radio-button({
                name: 'A.category',
                'ng-model': 'ProtocolCtrl.europrotocol.A.category',
                value: 'A'
              })
        label.protocolField.protocolField_column
          .protocolField__main
            .protocolField__label B
            .protocolField__control
              +radio-button({
                name: 'A.category',
                'ng-model': 'ProtocolCtrl.europrotocol.A.category',
                value: 'B',
                checked,
                selected
              })
        label.protocolField.protocolField_column
          .protocolField__main
            .protocolField__label C
            .protocolField__control
              +radio-button({
                name: 'A.category',
                'ng-model': 'ProtocolCtrl.europrotocol.A.category',
                value: 'C'
              })
        label.protocolField.protocolField_column
          .protocolField__main
            .protocolField__label D
            .protocolField__control
              +radio-button({
                name: 'A.category',
                'ng-model': 'ProtocolCtrl.europrotocol.A.category',
                value: 'D'
              })

    .protocolField.protocolField_column
      .form__group.form__group_block.margin_bottom_small
        input.form__input(
          ng-model='ProtocolCtrl.europrotocol.A.dateOfIssueOfDrivingLicense'
          name='A.dateOfIssueOfDrivingLicense'
          placeholder='Дата выдачи ВУ'
        )
      .form__group.form__group_block
        input.form__input(
          ng-model='ProtocolCtrl.europrotocol.A.waybill'
          name='A.waybill'
          placeholder='Путевой лист'
        )
    .protocolField.protocolField_column
      .protocolField__main
        .protocolField__label Страховщик ТС "A":
      .protocolField__secondary
        label.protocolField__main.margin_bottom_small
          .protocolField__label ТС застрахован от ущерба:
          .protocolField__control
            +checkbox({
              id: 'A.insurer.vehicleIsInsured',
              'ng-model': 'ProtocolCtrl.europrotocol.A.insurer.vehicleIsInsured'
            })
        .form__group.form__group_block.margin_bottom_small
          input.form__input(
            ng-model='ProtocolCtrl.europrotocol.A.insurer.investigativeCommitteeOfVictim'
            name='A.insurer.investigativeCommitteeOfVictim'
            placeholder='СК потерпевшего'
          )
        .form__group.form__group_block.margin_bottom_small
          input.form__input(
            ng-model='ProtocolCtrl.europrotocol.A.insurer.insurancePolicy'
            name='A.insurer.insurancePolicy'
            placeholder='Страховой полис'
          )
        .form__group.form__group_block
          input.form__input(
            ng-model='ProtocolCtrl.europrotocol.A.insurer.validUntil'
            name='A.insurer.validUntil'
            placeholder='Действителен до'
          )

    .protocolField.protocolField_column
      button.button.button_lg.button_block.button_lightgrey.margin_bottom_small Нарисуйте схему удара

      .form__group.form__group_textarea.form__group_block.margin_bottom_small
        textarea.form__textarea(
          ng-model='ProtocolCtrl.europrotocol.A.insurer.damageDescription'
          name='A.insurer.damageDescription'
          placeholder='Характер и перечень повреждений'
          rows='3'
        )
      .form__group.form__group_block
        input.form__input(
          ng-model='ProtocolCtrl.europrotocol.A.additionalRemarks'
          name='A.additionalRemarks'
          placeholder='Дополнеительные замечания'
        )

    .padding_vertical_half
      a.button.button_lg.button_block(ui-sref='protocol.vehicle_B') Далее
