@import 'steps'

.protocol
  min-height 100%
  background #eef0f2
  &__sectionHeader
    line-height 1.15
    margin 0
    font-size 1.1rem
    color #444
    font-weight 500
    &_secondary
      color #5e5e63
      font-size 1.05rem
  &__schemeImage
    display flex
    //height 100%
    border 1px solid #95989a

.protocolField
  display flex
  justify-content space-between
  align-items center
  margin 0
  padding-top 10px
  padding-bottom 10px
  border-bottom 2px solid #e4e6e9
  text-decoration none
  &:last-child
    border-bottom none
  &__main
    display flex
    justify-content space-between
    align-items center
    width 100%
    &_inline
      display inline-flex
      width auto
    &_left
      justify-content flex-start
    &_right
      justify-content flex-end
    &_left, &_right
      .protocolField__label
        padding-right 5px
  &__secondary
    width 100%
    padding-top 10px
  &__label, &__control
    color #918e9c
  &__label
    line-height 1.2
  &__control
    display flex
    flex-direction column
    align-items flex-end
    padding-left 5px
  &_column
    flex-direction column
