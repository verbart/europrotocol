.errorPage
  display flex
  flex-direction column
  align-items center
  justify-content center
  min-height 100%
  padding-top 15px
  padding-bottom 15px
  text-align center
  background #ededed
  &__statusCode
    color #f59d03
    font-weight 300
    font-size 5rem
    text-shadow 6px 5px 7px rgba(0, 0, 0, 0.2)
  &__statusMsg
    color #363636
    font-size 2rem
    font-weight 300
  &__info
    color #616161
    font-size 1.15rem
    font-weight 300

