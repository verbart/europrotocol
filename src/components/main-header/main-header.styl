.mainHeader
  position fixed
  top 0
  left 0
  right 0
  height 52px
  z-index 2000
  background #fff
  box-shadow 0 1px 2px #c9c8c5
  &__container
    display flex
    align-items center
    justify-content space-between
    height 100%
  &__logo
    img
      width 30px * 2
      margin-top 10px
      margin-bottom 10px
    @media(max-width 992px)
      img
        width 30px
  &__navbar
    align-self stretch
    width 100%
    margin-left 15px
    @media(max-width 992px)
      position fixed
      top 52px
      bottom 0
      left 0
      right 0
      min-width 280px
      margin-left 0
      background #fff
      transform translate(100%)
      overflow auto
      box-shadow inset 0 1px 2px #c9c8c5, 0 1px 2px #c9c8c5
      transition .2s
      &_active
        transform translate(0)
  &__burgerButton
    display none
    margin-left auto
    padding 5px 0 5px 15px
    background none
    border none
    outline none
    box-shadow none
    .icon
      width 25px
      height 25px
      color #333
      cursor pointer
    @media (max-width 992px)
      display flex

  .logo
    display flex
    align-items center
    text-decoration none
    margin-right 15px
    &__image
      display flex
    &__text
      margin 0
      padding-left 10px
      color #333
      font-size 1rem
      font-weight 600
      text-decoration none
      white-space nowrap

